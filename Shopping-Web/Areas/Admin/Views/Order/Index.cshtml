@model IEnumerable<OrderModel>
@{
    ViewData["title"] = "Danh Sách Đơn Hàng";
}




    <h3>Danh Sách Đon Hàng  </h3>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Order Code</th>
                <th>UserName</th>               
                <th>Order Date</th>
                <th>Order Status</th>
                
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>#</th>
                    <td>@item.OrderCode</td>
                    <td>@item.UserName</td>
                    <td>@item.CreatedDate</td>
                    
                    <td>
                        @if (item.Status == 1)
                        {
                            <span class="text text-success">Đơn Hàng Mới</span>
                        }
                        else
                        {
                            <span class="text text-danger">Đơn Hàng Đã Xử Lý</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="ViewOrder" asp-controller="Order" asp-route-ordercode="@item.OrderCode">View Order</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Order" asp-route-Id="@item.OrderCode">Delete</a>
                    </td>

                </tr>
            }

        </tbody>
    </table>


