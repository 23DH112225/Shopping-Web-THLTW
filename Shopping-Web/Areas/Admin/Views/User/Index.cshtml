@model IEnumerable<AppUserModel>

@{
    ViewData["title"] = "List Users";


}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>List Users</h3>

    <a class="btn btn-primary" asp-action="Create" asp-controller="Brand">Thêm Users</a>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Phone</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PasswordHash</td>
                    <td>@user.PhoneNumber </td>
                    <td></td>
                    
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="User" asp-route-Id="@user.Id">Edit</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="User" asp-route-Id="@user.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
